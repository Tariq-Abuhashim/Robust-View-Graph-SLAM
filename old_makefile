# -lglut : OpenGL

#Makefile:
all: PwgOptimiser ImageViewer

PwgOptimiser: main.o PwgOptimiser.o RecoverMoments.o
	g++ main.o PwgOptimiser.o RecoverMoments.o -o PwgOptimiser -lcholmod -llapack -lblas -lglfw -O3 -Wall -lCg -lCgGL -lpthread -lglut -lGL -lGLU -lX11 -lXxf86vm -lXrandr -lXi -lopencv_core -lopencv_flann -lopencv_highgui

ImageViewer: imageviewer.o
	g++ imageviewer.o -o ImageViewer -lglfw -O3 -Wall -lCg -lCgGL -lpthread -lglut -lGL -lGLU -lX11 -lXxf86vm -lXrandr -lXi

